<Page x:Class="PackageManager.Views.KanbanStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:button="clr-namespace:CustomControlLibrary.CustomControl.Controls.Button;assembly=CustomControlLibrary"
      xmlns:controls="clr-namespace:CustomControlLibrary.CustomControl.Controls;assembly=CustomControlLibrary"
      xmlns:C="clr-namespace:CustomControlLibrary.CustomControl.Controls.DataGrid;assembly=CustomControlLibrary"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Loaded="Page_Loaded">
    <Grid>
        <controls:CLoadingOverlay x:Name="Overlay" Message="正在加载数据…"
                                  OverlayDarkness="0.25"
                                  AccentBrush="DodgerBlue">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="看板统计" FontSize="18" FontWeight="Bold" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,6,0,6">
                <controls:CTextBlock Text="项目" Width="100" VerticalAlignment="Center" />
                <controls:CComboBox Width="280"
                                    ItemsSource="{Binding Projects}"
                                    DisplayMemberPath="Name"
                                    SelectedValuePath="Id"
                                    SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                                    SelectionChanged="ProjectCombo_SelectionChanged" />
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,6">
                <controls:CTextBlock Text="人员" Width="100" VerticalAlignment="Center" />
                <controls:CComboBox Width="280"
                                    ItemsSource="{Binding Users}"
                                    DisplayMemberPath="Name"
                                    SelectedValuePath="Id"
                                    SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                                    SelectionChanged="UserCombo_SelectionChanged" />
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,6">
                <controls:CTextBlock Text="迭代" Width="100" VerticalAlignment="Center" />
                <controls:CComboBox Width="280"
                                    ItemsSource="{Binding Iterations}"
                                    DisplayMemberPath="Name"
                                    SelectedValuePath="Id"
                                    SelectedItem="{Binding SelectedIteration, Mode=TwoWay}"
                                    SelectionChanged="IterationCombo_SelectionChanged" />
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,6,0,6">
                <button:CButton Content="查询" Width="100" Click="QueryButton_Click" />
                <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Text="{Binding ResultTextContent}" />
            </StackPanel>
            <C:CDataGrid Grid.Row="4"
                         ItemsSource="{Binding StatsRows}"
                         EnableAutoTemplateSelection="True"
                         TextAlignment="Left"
                         Margin="0,8,0,0"
                         VerticalScrollBarVisibility="Auto" />
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <button:CButton Content="返回" Width="100" Click="CloseButton_Click" />
        </StackPanel>
            </Grid>
        </controls:CLoadingOverlay>
    </Grid>
</Page>
