<Window x:Class="PackageManager.Views.WorkItemKanbanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:button="clr-namespace:CustomControlLibrary.CustomControl.Controls.Button;assembly=CustomControlLibrary"
        xmlns:controls="clr-namespace:CustomControlLibrary.CustomControl.Controls;assembly=CustomControlLibrary"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:pc="clr-namespace:PackageManager.Views.Controls"
        Title="迭代看板" Height="700" Width="1080"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowState="Maximized"
        AllowDrop="True">
    <Grid>
        <controls:CLoadingOverlay x:Name="Overlay" Message="正在加载看板…" OverlayDarkness="0.25" AccentBrush="DodgerBlue">
            <AdornerDecorator>
                <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="迭代看板" FontSize="18" FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                        <controls:CTextBlock Text="人员" Width="50" VerticalAlignment="Center" />
                        <controls:CComboBox Width="200" Height="35"
                                            ItemsSource="{Binding Members}"
                                            DisplayMemberPath="Name"
                                            SelectedItem="{Binding SelectedMember, Mode=TwoWay}"
                                            SelectionChanged="MemberCombo_SelectionChanged" />
                    </StackPanel>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Columns}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="6" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="10" Margin="0,0,16,0" MinWidth="240" AllowDrop="True" Drop="Column_Drop" DragOver="Column_DragOver">
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Top" Background="#F9FAFB" >
                                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="Bold" />
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Count, StringFormat=数量 · {0}}" Foreground="#6B7280" />
                                                <TextBlock Text="  ·  " Foreground="#9CA3AF" />
                                                <TextBlock Text="{Binding TotalPoints, StringFormat=故事点 · {0}}" Foreground="#6B7280" />
                                            </StackPanel>
                                        </StackPanel>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding Items}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <pc:WorkItemCard PreviewMouseLeftButtonDown="Item_PreviewMouseLeftButtonDown"
                                                                         MouseMove="Item_MouseMove"
                                                                         MouseLeftButtonUp="Item_MouseLeftButtonUp" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <button:CButton Content="关闭" Width="100" Click="CloseButton_Click" />
                </StackPanel>
                </Grid>
            </AdornerDecorator>
        </controls:CLoadingOverlay>
    </Grid>
</Window>
